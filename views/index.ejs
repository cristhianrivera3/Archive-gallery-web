<!-- Hero Section con dos banners -->
<section class="hero-section">
    <a href="/stock" class="hero-banner stock-banner">
        <div class="banner-image">
            <img src="<%= banners && banners.stock ? banners.stock : '/img/stock-banner.jpg' %>" 
                 alt="Stock Collection" 
                 onerror="this.src='https://images.unsplash.com/photo-1552374196-c4e7ffc6e126?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80'">
        </div>
        <div class="banner-content">
            <h2 class="banner-title">STOCK</h2>
            <p class="banner-subtitle">prendas disponibles</p>
            <span class="banner-cta">
                ver colección de common place 
                <span class="spinning-star">✧</span>
                →
            </span>
        </div>
    </a>
    
    <a href="/gallery" class="hero-banner gallery-banner">
        <div class="banner-image">
            <img src="<%= banners && banners.gallery ? banners.gallery : '/img/gallery-banner.jpg' %>" 
                 alt="Art Gallery" 
                 onerror="this.src='https://images.unsplash.com/photo-1541961017774-22349e4a1262?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80'">
        </div>
        <div class="banner-content">
            <h2 class="banner-title">GALLERY</h2>
            <p class="banner-subtitle">galeria de arte - common place <span class="static-star">⁂</span></p>
            <span class="banner-cta">Ver Gallery! →</span>
        </div>
    </a>
</section>

