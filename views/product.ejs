<section class="product-detail-section">
    <div class="product-detail-container">
        <% if (producto) { %>
            <div class="product-detail-grid">
                <!-- Imagen del Producto -->
                <div class="product-detail-image">
                    <img 
                        src="<%= producto.imagen || '/img/placeholder.jpg' %>" 
                        alt="<%= producto.nombre %>"
                        class="detail-image"
                        onerror="this.src='/img/placeholder.jpg'"
                    >
                </div>
                
                <!-- Información del Producto -->
                <div class="product-detail-info">
                    <span class="detail-category"><%= producto.categoria %></span>
                    <h1 class="detail-title"><%= producto.nombre %></h1>
                    <p class="detail-description"><%= producto.descripcion %></p>
                    
                    <div class="detail-price">$<%= producto.precio.toLocaleString() %></div>
                    
                    <div class="detail-meta">
                        <div class="meta-item">
                            <span class="meta-label">TALLA:</span>
                            <span class="meta-value"><%= producto.talla %></span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">ESTILO:</span>
                            <span class="meta-value"><%= producto.estilo || 'Urbano' %></span>
                        </div>
                        <div class="meta-item">
                            <span class="meta-label">DISPONIBILIDAD:</span>
                            <span class="meta-value <%= producto.stock > 0 ? 'stock-available' : 'stock-sold' %>">
                                <%= producto.stock > 0 ? `${producto.stock} UNIDADES` : 'AGOTADO' %>
                            </span>
                        </div>
                    </div>
                    
                    <div class="detail-actions">
                        <button class="btn-primary btn-large <%= producto.stock === 0 ? 'btn-disabled' : '' %>"
                                <%= producto.stock === 0 ? 'disabled' : '' %>>
                            <%= producto.stock > 0 ? 'COMPRAR AHORA' : 'PRODUCTO AGOTADO' %>
                        </button>
                        <a href="/" class="btn-secondary">VOLVER A LA COLECCIÓN</a>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="no-product">
                <h2>PRODUCTO NO ENCONTRADO</h2>
                <p>El producto que buscas no está disponible en este momento.</p>
                <a href="/" class="cta-button">VER COLECCIÓN COMPLETA</a>
            </div>
        <% } %>
    </div>
</section>

<style>
.product-detail-section {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.product-detail-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
}

.product-detail-image {
    background: var(--crema-suave);
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid var(--borde-suave);
}

.detail-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
}

.product-detail-info {
    padding: 2rem 0;
}

.detail-category {
    color: var(--dorado);
    font-size: 0.9rem;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 1rem;
    display: block;
    font-family: 'Courier New', monospace;
}

.detail-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--acento-urbano);
    margin-bottom: 1.5rem;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.detail-description {
    color: var(--texto-medio);
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
}

.detail-price {
    font-size: 2rem;
    font-weight: 800;
    color: var(--marron-elegante);
    margin-bottom: 2rem;
    font-family: 'Courier New', monospace;
}

.detail-meta {
    margin-bottom: 2.5rem;
}

.meta-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-bottom: 1px solid var(--borde-suave);
}

.meta-label {
    font-weight: 600;
    color: var(--texto-oscuro);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
}

.meta-value {
    font-weight: 700;
    color: var(--marron-elegante);
    font-family: 'Courier New', monospace;
}

.detail-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.btn-large {
    padding: 1.5rem 2rem;
    font-size: 1.1rem;
}

.btn-secondary {
    background: transparent;
    color: var(--marron-elegante);
    border: 2px solid var(--marron-elegante);
    padding: 1rem 2rem;
    border-radius: 2px;
    text-decoration: none;
    text-align: center;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    font-family: 'Courier New', monospace;
    transition: all 0.3s ease;
}

.btn-secondary:hover {
    background: var(--marron-elegante);
    color: var(--crema-suave);
}

.no-product {
    text-align: center;
    padding: 4rem 2rem;
}

.no-product h2 {
    color: var(--marron-oscuro);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
}

@media (max-width: 768px) {
    .product-detail-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
    }
    
    .detail-title {
        font-size: 2rem;
    }
    
    .detail-actions {
        flex-direction: column;
    }
}
</style>