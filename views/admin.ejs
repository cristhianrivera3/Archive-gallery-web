                <div class="stat-label">Productos Totales</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">
                    <%= productos ? productos.filter(p => p.stock > 0).length : 0 %>
                </div>
                <div class="stat-label">En Stock</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">
                    <%= productos ? productos.filter(p => p.stock === 0).length : 0 %>
                </div>
                <div class="stat-label">Agotados</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">
                    <%= productos ? [...new Set(productos.map(p => p.category))].length : 0 %>
                </div>
                <div class="stat-label">Categor√≠as</div>
            </div>
        </div>
        
